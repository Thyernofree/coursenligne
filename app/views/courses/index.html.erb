<h1>Courses <%= @courses.count %></h1>

<div class="row">
<% for course in @courses %>

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= course.image.url(:medium) %>" alt="<%= course.title %>">
      <div class="caption">
        <h3><%= course.title %>Thumbnail label</h3>
        <p><%= course.description %></p>
        <p><a href="#" class="btn btn-primary" role="button">Voir le cours</a>
      </div>
    </div>
  </div>
<% end %>
</div>
